---
import BlogCard from '@/components/BlogCard.astro'
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import PageHead from '@/components/PageHead.astro'
import PersonCard from '@/components/PersonCard.astro'
import ProjectCard from '@/components/ProjectCard.astro'
import Layout from '@/layouts/Layout.astro'
import {
  getAllPeople,
  getPostsByPerson,
  getProjectsByPerson,
} from '@/lib/data-utils'
import { render } from 'astro:content'

export async function getStaticPaths() {
  const people = await getAllPeople()
  return people.map((person) => ({
    params: { id: person.id },
    props: { person },
  }))
}

const { person } = Astro.props
const { Content } = await render(person)
const personPosts = await getPostsByPerson(person.id)
const personProjects = await getProjectsByPerson(person.id)
---

<Layout class="max-w-3xl">
  <PageHead
    slot="head"
    title={`${person.data.name}`}
    description={`Profile of ${person.data.name}.`}
    noindex
  />
  <Breadcrumbs
    items={[
      { href: '/people', label: 'People', icon: 'lucide:users' },
      { label: person.data.name, icon: 'lucide:user' },
    ]}
  />

  <section>
    <PersonCard person={person} />
  </section>
  <div class="prose">
    <Content />
  </div>
  {
    personProjects.length > 0 && (
      <section class="flex flex-col gap-y-4">
        <h2 class="text-2xl font-medium">Projects by {person.data.name}</h2>
        <ul class="flex flex-col gap-4">
          {personProjects.map((project) => (
            <li>
              <ProjectCard project={project} />
            </li>
          ))}
        </ul>
      </section>
    )
  }
  {
    personPosts.length > 0 && (
      <section class="flex flex-col gap-y-4">
        <h2 class="text-2xl font-medium">
          Updates involving {person.data.name}
        </h2>

        <ul class="flex flex-col gap-4">
          {personPosts.map((post) => (
            <li>
              <BlogCard entry={post} />
            </li>
          ))}
        </ul>
      </section>
    )
  }
</Layout>
