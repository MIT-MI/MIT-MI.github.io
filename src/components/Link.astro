---
import { Link as LinkComponent } from '@/components/ui/link'

interface Props {
  href: string
  external?: boolean
  class?: string
  underline?: boolean
  [key: string]: any
}

const { href, external, class: className, underline, ...rest } = Astro.props
---

<LinkComponent
  href={href}
  external={external}
  underline={underline}
  className={className}
  {...rest}
>
  <slot />
</LinkComponent>
